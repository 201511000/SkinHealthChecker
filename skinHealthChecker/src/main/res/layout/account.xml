<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraActivity"
    android:id="@+id/base"
    >

    <TabHost
        android:id="@+id/tabHost"
        android:background="#e77801"
     android:textSize="10sp"

    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




            </TabWidget>


            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout


                    android:id="@+id/baseone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFA6"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:weightSum="1"

                    app:layout_scrollFlags="scroll">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Επιλέξτε προφίλ!"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView42"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Προφιλ:" />

                            <ListView
                                android:id="@+id/mylist"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <Spinner
                                android:id="@+id/spinner2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dip" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dip" />

                            <Button
                                android:id="@+id/deleteprofil"
                                style="@android:style/Widget.Holo.Button.Borderless"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/buttonshape"
                                android:text="Διαγραφή Προφίλ!"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="normal|bold"


                                android:visibility="visible" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dip" />

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:adjustViewBounds="false"
                                android:background="@drawable/profil"
                                android:cropToPadding="false"
                                android:layout_gravity="center"
                                />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dip" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dip" />

                            <Button
                                android:id="@+id/gotomain"
                                style="@android:style/Widget.Holo.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/buttonshape"
                                android:text="Επιλογή Προφίλ!"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="normal|bold"

                                android:layout_gravity="center|end"

                                android:visibility="visible" />

                        </LinearLayout>
                    </ScrollView>

                    x

                </LinearLayout>

                <LinearLayout


                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/basetwo"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFA6"
                    android:baselineAligned="false"
                    android:orientation="vertical"
                    android:weightSum="1"

                    app:layout_scrollFlags="scroll">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Εισάγετε τα στοιχεία του νέου προφίλ σας"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:textStyle="normal|bold" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Όνομα προφίλ:"
                                android:textColor="@android:color/black"
                                android:textStyle="normal|bold" />

                            <EditText
                                android:id="@+id/profilname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="text" />

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Όνομα - Επώνυμο :"
                                android:textColor="@android:color/black"
                                android:textStyle="normal|bold" />

                            <EditText
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="text" />

                            <TextView
                                android:id="@+id/agetext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=" Ηλικία :"
                                android:textColor="@android:color/black"
                                android:textStyle="normal|bold" />

                            <EditText
                                android:id="@+id/age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="number" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Φύλο:" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dip" />

                            <Spinner
                                android:id="@+id/spinnersex"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/sex_arrays"
                                android:prompt="@string/Sex" />

                            <CheckBox
                                android:id="@+id/history"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Υπάρχει ιστορικό κακοήθη μελανώματος" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="E-mail :"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/mail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="textEmailAddress"
                                android:text="κάτι@gmail.com" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Τηλ. αριθμός επικοινωνίας:"
                                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                                android:visibility="visible" />

                            <EditText
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:inputType="number" />

                            <Space
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dip" />

                            <Button
                                android:id="@+id/save"
                                style="@android:style/Widget.Holo.Button.Borderless"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/buttonshape"
                                android:elevation="0dp"
                                android:includeFontPadding="false"
                                android:text="Αποθήκευση και ενεργοποίηση προφίλ"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="normal|bold"
                                android:visibility="visible" />

                        </LinearLayout>
                    </ScrollView>

                    x


                </LinearLayout>

            </FrameLayout>



        </LinearLayout>
    </TabHost>

</LinearLayout>
